{
  "env": {
    "browser": true,
    "es6": true,
    "es2022": true,
    "node": true
  },
  "extends": ["eslint:recommended", "airbnb-base", "prettier", "plugin:prettier/recommended"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "warn",
    "no-console": "off",
    "func-names": "off",
    "no-process-exit": "off",
    "object-shorthand": "off",
    "class-methods-use-this": "off",
    // My temporary rules (for bootcamp only)
    "import/no-unresolved": [2, { "ignore": ["^https:\/\/cdn.skypack.dev"] }],
    "no-use-before-define": ["error", { "functions": false }],
    "no-restricted-globals": "warn",
    "no-undef": "warn"
  }
}

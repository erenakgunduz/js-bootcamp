{
  "env": {
    "browser": true,
    "es6": true,
    "es2022": true,
    "node": true
  },
  "extends": ["eslint:recommended", "airbnb-base", "prettier", "plugin:prettier/recommended"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "no-underscore-dangle": ["error", { "allowAfterThis": true }],
    "no-unused-vars": "warn",
    "no-console": "off",
    // Temporary rules - some for bootcamp only, others I may consider for future
    "import/no-unresolved": [2, { "ignore": ["^https://cdn.skypack.dev", "^https://esm.sh"] }],
    "import/extensions": ["error", "ignorePackages"],
    "no-use-before-define": ["error", { "functions": false }],
    "no-plusplus": "off",
    "no-restricted-globals": "warn",
    "no-undef": "warn",
    "max-classes-per-file": "off"
  }
}
